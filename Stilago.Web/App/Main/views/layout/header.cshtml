<div class="navbar navbar-fixed-top navbar-material-grey-300" role="navigation" ng-controller="app.views.layout.header as vm">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#/"><img style="vertical-align: top; margin: 0; height: 50px; margin-top: -10px;" src="http://corporate.stilago.com/en/wp-content/uploads/2014/05/logo.png" /></a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li ng-repeat="menuItem in vm.menu.items" ng-class="{active: vm.currentMenuName == menuItem.name}">
                    <a ng-show="menuItem.name == 'Home' || menuItem.name == 'About' || menuItem.name == 'CreateComputer'" ng-href="{{menuItem.url}}"><i class="{{menuItem.icon}}" ng-if="menuItem.icon"></i> {{menuItem.displayName}}</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown"><span>{{vm.currentLanguage.displayName}}</span> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li ng-repeat="language in vm.languages" ng-hide="vm.currentLanguage.name == language.name"><a href="/AbpLocalization/ChangeCulture?cultureName={{language.name}}">{{language.displayName}}</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="shadow-z-1 shadow-container">
    <div class="container search-container">
        <label class="search-label">Search for computers</label>
        <div class="form-control-wrapper">
            <input id="searchInput" ng-model="searchTerm" class="form-control" />
            <span class="material-input"></span>
        </div>
        <button id="beginSearch" ng-click="beginSearch(searchTerm)" type="button" class="search-button mdi-action-search" data-toggle="tooltip" data-placement="top" title="" data-original-title="Perform search"></button>
    </div>
</div>
